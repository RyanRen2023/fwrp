<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="myPersistenceUnit" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.algonquin.cst8288.fwrps.model.User</class>
        <class>com.algonquin.cst8288.fwrps.model.Food</class>
<!--        <class>com.algonquin.cst8288.fwrps.model.FoodSearch</class>-->
        <class>com.algonquin.cst8288.fwrps.model.FoodType</class>
        <class>com.algonquin.cst8288.fwrps.model.Orders</class>
        <class>com.algonquin.cst8288.fwrps.model.RatingAndFeedback</class>
        <class>com.algonquin.cst8288.fwrps.model.Store</class>
        <class>com.algonquin.cst8288.fwrps.model.Subscribe</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fwrp"/>
            <property name="jakarta.persistence.jdbc.user" value="fwrp"/>
            <property name="jakarta.persistence.jdbc.password" value="fwrpfwrp"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
